INSTGRP 	?= "@instgrp@"
MANGRP 		?= "@mangrp@"
INSTUSR 	?= "root"

BLDHOME		= @srcdir@

CXX			= @CXX@
CC			= @CC@
LD			= @CXX@
CCLD		= @CC@

# Set a number of warnings to silent; some of our dependent libraries (asio) and generated code (protobuf)
# make current gcc/clang awful cranky under -wall

LDFLAGS		+= @LDFLAGS@
CFLAGS		+= -Wall -Wno-unknown-warning-option -Wno-format-truncation -Wno-unused-function -g -I. -fPIE @NMCFLAGS@ @NLCFLAGS@ @CPPFLAGS@ @PTHREAD_CFLAGS@ @PROTOCCFLAGS@ @PCAPCFLAGS@ 
CXXFLAGS 	+= -Wall -Wno-unknown-warning-option -Wno-deprecated-declarations -Wno-format-truncation -Wno-unused-local-typedefs -Wno-unused-function -Wno-infinite-recursion -g -I. -fPIE @CXXFLAGS@ @PROTOCFLAGS@ -DKS_STR_ENCODING_NONE @PCAPCFLAGS@
CPPFLAGS 	+= @CPPFLAGS@ 

INSTALL		= @INSTALL@
INSTALL_DATA = @INSTALL_DATA@
INSTALL_PROGRAM = @INSTALL_PROGRAM@
INSTALL_SCRIPT = @INSTALL_SCRIPT@
INSTALL_STRIP_PROGRAM = @INSTALL_STRIP_PROGRAM@

CXXLIBS 	+= @CXXLIBS@

LIBS		+= @LIBS@
KSLIBS		+= @KSLIBS@ @PTHREAD_LIBS@ @PROTOLIBS@

PTHREADLIBS = @PTHREAD_LIBS@
CAPLIBS		= @caplibs@
NETLINKLIBS	= @NLLIBS@
AIRCAPLIBS	= @airpcaplib@

PROTOLIBS 	= @PROTOLIBS@
PROTOCFLAGS	= @PROTOCFLAGS@
PROTOCBIN 	?= @PROTOCBIN@

PROTOCLIBS	= @PROTOCLIBS@
PROCOCCFLAGS	= @PROTOCCFLAGS@
PROTOCCBIN	?= @PROTOCCBIN@

PTHREADCFLAGS = @PTHREAD_CFLAGS@
NMFLAGS		= @NMCFLAGS@
NMLIBS		= @NMLIBS@

PCAPLIBS	= @PCAPLIBS@

LIBMLIB		= @LIBMLIB@

LIBUBERTOOTHLIBS = @LIBUBERTOOTHLIBS@
LIBUBERTOOTHCFLAGS = @LIBUBERTOOTHCFLAGS@

LIBBTBBLIBS = @LIBBTBBLIBS@
LIBBTBBCFLAGS = @LIBBTBBCFLAGS@

LIBUSBLIBS = @LIBUSBLIBS@
LIBUSBCFLAGS = @LIBUSBCFLAGS@

LIBWSLIBS = @LIBWSLIBS@
LIBWSCFLAGS = @LIBWSCFLAGS@

SUIDGROUP 	= @suidgroup@

DATASOURCE_LIBS	+= $(CAPLIBS) @PTHREAD_LIBS@ @PROTOCLIBS@ -lm

PYTHON		?= @PYTHON@


prefix 		= @prefix@
exec_prefix = @exec_prefix@
plugindir	= @libdir@/kismet
ETC			= ${DESTDIR}@sysconfdir@
BIN			= ${DESTDIR}@bindir@
SHARE 		= ${DESTDIR}@datadir@/kismet/
MAN 		= ${DESTDIR}@mandir@
LIB			= ${DESTDIR}@libdir@
WAV 		= ${DESTDIR}@datadir@/kismet/wav/
HTTPD		= ${DESTDIR}@datadir@/kismet/httpd/

PLUGINLDFLAGS += @PLUGINLDFLAGS@ @LDFLAGS@

GIT			?= git

