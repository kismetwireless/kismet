HOME	= @srcdir@
CXX	= @CXX@
CC	= @CC@
LD	= @CXX@
LDFLAGS	= @LDFLAGS@
LIBS	= @LIBS@
CFLAGS	= @CPPFLAGS@
CXXFLAGS = -Wall @CXXFLAGS@
CPPFLAGS = @CPPFLAGS@
SUID	= @suid@

prefix = @prefix@
exec_prefix = @exec_prefix@
datarootdir = @datarootdir@
ETC	= @sysconfdir@
BIN	= @bindir@
SHARE = @datadir@/kismet/
WAV = ${SHARE}/wav/

BUZZERO = buzzme.o
BUZZER = buzzme

all:	$(BUZZER) 

$(BUZZER):	$(BUZZERO)
	$(LD) $(LDFLAGS) -o $(BUZZER) $(BUZZERO) $(LIBS)

clean:
	@-rm -f *.o
	@-rm -f $(BUZZER)

distclean:
	@-make clean
	@-rm -f *~
	@-rm -f Makefile

.c.o:	$(DEPEND)
	$(CC) $(CFLAGS) -c $*.c -o $@ 

.cc.o:	$(DEPEND)
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -c $*.cc -o $@ 

.SUFFIXES: .c .cc .o
